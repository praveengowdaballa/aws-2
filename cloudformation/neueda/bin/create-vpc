#!/bin/bash

if (( $# < 1 ))
then
	echo "$0 <stackName> <sshKeyName>"
	exit 1
fi

stackName=$1

if [[ -n "$2" ]]
then
	keyName=$2
else
	keyName=steveshilling
fi

region=$(awk -F"=" '/^region/ {gsub(/ /, "");print $2}' ~/.aws/config)

aws cloudformation create-stack --stack-name ${stackName} --template-body file://../templates/01-vpc.json --parameters ParameterKey=KeyPair,ParameterValue=${keyName} ParameterKey=subnetAZ,ParameterValue=${region}b ParameterKey=Region,ParameterValue=${region}

until aws cloudformation describe-stacks --stack-name ${stackName} | jq '.Stacks[].Outputs[]' 2>/dev/null
do
        echo -n "."
        sleep 30
done

aws cloudformation describe-stacks --stack-name ${stackName} | jq '.Stacks[].Outputs[]'
