{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create Docker VMs",
    "Parameters": {
        "KeyPair": {
            "Description": "SSH key",
            "Type": "String"
        },
        "PubSub": {
            "Description": "Public Subnet ID",
            "Type": "String"
        },
        "VpcId": {
            "Description": "VPC ID",
            "Type": "String"
        },
        "DNSZoneID": {
            "Description": "DNS Zone ID",
            "Type": "String"
        },
        "DomainName": {
            "Description": "Domain Name",
            "Type": "String"
        },
        "PubSecGrp": {
            "Description": "Security Group ID",
            "Type": "String"
        },
        "AMI": {
            "Description": "AMI to use",
            "Type": "String",
            "Default": "ami-b968bad6"
        },
        "VMSize": {
            "Description": "Size of the instance to create",
            "Type": "String",
            "Default": "m4.large"
        },
        "VolumeID1": {
            "Description": "Docker EBS Volume 1",
            "Type": "String"
        },
        "VolumeID2": {
            "Description": "Docker EBS Volume 2",
            "Type": "String"
        },
        "Prefix": {
            "Description": "Prefix name",
            "Type": "String",
            "Default": "neueda"
        }
    },
    "Resources": {
        "DockerInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {"Ref": "AMI"},
                "InstanceType": {"Ref": "VMSize"},
                "KeyName": {
                    "Ref": "KeyPair"
                },
                "SubnetId": {"Ref": "PubSub"},
                "SecurityGroupIds": [{"Ref": "PubSecGrp"}],
                "Volumes": [
                  {
                     "VolumeId": {"Ref": "VolumeID1"},
                     "Device": "/dev/xvdd"
                  }
                ],
                "UserData": { "Fn::Base64": {"Fn::Join": ["", [
                  "#cloud-boothook","\n",
                  "#!/bin/bash -xve","\n",
                  "/usr/bin/yum -y install docker","\n",
                  "/sbin/service docker start","\n"
                ]]}},
                "Tags": [ {
                    "Key": "Name",
                    "Value": {"Fn::Join": [ " ", [ {"Ref": "Prefix"},"Docker Server"]]}
                }]

            }
        },
        "DockerDNS": {
            "Type": "AWS::Route53::RecordSet",
            "Properties": {
                "HostedZoneId": {"Ref": "DNSZoneID"},
                "Comment" : "DNS name for Docker 1 server Instance.",
                "Name": {"Fn::Join": [ ".", ["docker1",{"Ref": "DomainName"}]]},
                "Type": "A",
                "TTL": "600",
                "ResourceRecords" : [
                    {"Fn::GetAtt" : [ "DockerInstance", "PublicIp" ] }
                ]
            }
        },
        "DockerInstance2": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {"Ref": "AMI"},
                "InstanceType": {"Ref": "VMSize"},
                "KeyName": {
                    "Ref": "KeyPair"
                },
                "SubnetId": {"Ref": "PubSub"},
                "SecurityGroupIds": [{"Ref": "PubSecGrp"}],
                "Volumes": [
                  {
                     "VolumeId": {"Ref": "VolumeID2"},
                     "Device": "/dev/xvdd"
                  }
                ],
                "UserData": { "Fn::Base64": {"Fn::Join": ["", [
                  "#cloud-boothook","\n",
                  "#!/bin/bash -xve","\n",
                  "/usr/bin/yum -y install docker","\n",
                  "/sbin/service docker start","\n"
                ]]}},
                "Tags": [ {
                    "Key": "Name",
                    "Value": {"Fn::Join": [ " ", [ {"Ref": "Prefix"},"Docker 2 Server"]]}
                }]

            }
        },
        "Docker2DNS": {
            "Type": "AWS::Route53::RecordSet",
            "Properties": {
                "HostedZoneId": {"Ref": "DNSZoneID"},
                "Comment" : "DNS name for Docker server 2 Instance.",
                "Name": {"Fn::Join": [ ".", ["docker2",{"Ref": "DomainName"}]]},
                "Type": "A",
                "TTL": "600",
                "ResourceRecords" : [
                    {"Fn::GetAtt" : [ "DockerInstance", "PublicIp" ] }
                ]
            }
        }

    },
    "Outputs": {
        "DockerID": {
            "Description": "The ID of the Docker Server",
            "Value": {
                "Ref": "DockerInstance"
            }
        },
        "DockerIP": {
            "Description": "IP of Docker Server",
            "Value": {
                "Fn::GetAtt" : [ "DockerInstance", "PublicIp" ]
            }
        },
        "DockerName": {
            "Description": "Docker DNS Name",
            "Value": {
                "Ref": "DockerDNS"
            }
        },
       "Docker2ID": {
            "Description": "The ID of the Docker 2 Server",
            "Value": {
                "Ref": "DockerInstance2"
            }
        },
        "Docker2IP": {
            "Description": "IP of Docker 2 Server",
            "Value": {
                "Fn::GetAtt" : [ "DockerInstance2", "PublicIp" ]
            }
        },
        "Docker2Name": {
            "Description": "Docker 2 DNS Name",
            "Value": {
                "Ref": "Docker2DNS"
            }
        }
    }
}
